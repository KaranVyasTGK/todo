<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks">
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= link_to 'Mark all as complete', mark_all_complete_path, class: "pull-right" %></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <%= render task %>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New task", new_task_path, class: "btn btn-primary" %>
